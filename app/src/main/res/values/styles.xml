<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- BottomNavigationView Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="backgroundTint">@color/bottom_nav_menu</item>
    </style>


    <!-- Floating Action Button (Back) Style -->
    <style name="Widget.App.FloatingActionButton.Bordered" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">8dp</item>
        <item name="rippleColor">@color/gray</item>
        <item name="iconTint">@color/black</item>
        <item name="elevation">3dp</item>
        <item name="hoveredFocusedTranslationZ">3dp</item>
        <item name="pressedTranslationZ">6dp</item>
    </style>


    <!-- Estilo para botones cuadrados con borde negro -->
    <!-- RA and Remote Button Style -->
    <style name="Widget.App.Button.Bordered" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>

        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="strokeColor">@color/black</item>

        <item name="strokeWidth">4dp</item>

        <!-- Configuración de padding y tipografía -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:letterSpacing">0</item>

        <!-- Eliminar elevación y sombra -->
        <item name="elevation">4dp</item>


        <!-- Añadir ripple effect para mejor feedback -->
<!--        <item name="rippleColor">@android:color/darker_gray</item>-->
    </style>
</resources>